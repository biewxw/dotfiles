{
  //Workbench Configs
  "workbench.startupEditor": "none",
  "workbench.editor.enablePreview": false,
  "workbench.activityBar.visible": false,
  "workbench.statusBar.visible": true,
  "workbench.iconTheme": "origamid-next-icons",
  "workbench.fontAliasing": "auto",
  "workbench.sideBar.location": "right",
  "workbench.colorTheme": "Bonsai",
  "workbench.colorCustomizations": {
    "editor.selectionBackground": "#f534eb7c",
    "editor.selectionHighlightBackground": "#f534eb7c",
  },
  // Editor Configs
  "editor.lineHeight": 22,
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.fontWeight": "500",
  "editor.detectIndentation": true,
  "editor.renderIndentGuides": false,
  "editor.renderLineHighlight": "gutter",
  "editor.tabSize": 2,
  "editor.minimap.enabled": false,
  "editor.formatOnSave": false,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.cursorWidth": 100,
  "editor.cursorBlinking": "smooth",
  "editor.cursorStyle": "block",
  "editor.cursorSmoothCaretAnimation": true,
  "editor.smoothScrolling": true,
  "editor.hideCursorInOverviewRuler": true,
  "editor.overviewRulerBorder": false,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.suggestSelection": "first",
  "editor.renderWhitespace": "none",
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  // Terminal Configs
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.macOptionIsMeta": true,
  "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
  "terminal.integrated.shell.linux": "/bin/zsh",
  "terminal.integrated.fontWeightBold": "700",
  "terminal.integrated.lineHeight": 1.6,
  "terminal.integrated.rendererType": "dom",
  // Explorer Configs
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "explorer.openEditors.visible": 1,
  // Files Configs
  "files.trimTrailingWhitespace": true,
  "files.autoSave": "afterDelay",
  // Git Configs
  "git.confirmSync": false,
  "git.autofetch": false,
  // Window
  "window.zoomLevel": 0,
  "window.title": "ハッピーハッキング",
  "window.menuBarVisibility": "toggle",
  // Java
  "java.semanticHighlighting.enabled": true,
  "java.requirements.JDK11Warning": false,
  "java.home": "C:\\Program Files\\Java\\jdk1.8.0_241",
  "java.help.firstView": "gettingStarted",
  // Extras
  "breadcrumbs.enabled": false,
  "extensions.ignoreRecommendations": true,
  "javascript.validate.enable": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  // Per Language
 "[vue]": {
   "editor.formatOnSave": true,
   "editor.defaultFormatter": "esbenp.prettier-vscode"
 },
 "[javascript]": {
   "editor.formatOnSave": true,
   "editor.defaultFormatter": "esbenp.prettier-vscode"
 },
 "[json]": {
   "editor.defaultFormatter": "esbenp.prettier-vscode"
 },
  // FESC Settings
  "files.eol": "\n",
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "liveServer.settings.donotShowInfoMsg": true,
  "vsicons.dontShowNewVersionMessage": true,
  "prettier.requireConfig": true,
  "yaml.schemas": {
    "file:///c%3A/Users/biewo/.vscode/extensions/me-dutour-mathieu.vscode-github-actions-2.2.7/schemas/workflow.schema.json": "/.github/workflows/*.yml",
    "file:///c%3A/Users/biewo/.vscode/extensions/me-dutour-mathieu.vscode-github-actions-2.2.7/schemas/action.schema.json": "/action.yml"
  },
  // Vetur
  "vetur.grammar.customBlocks": {
    "docs": "md",
    "i18n": "json",
    "preview-props": "json"
  },
}
